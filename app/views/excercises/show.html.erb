<div class="col-xs-12 col-md-10 col-md-offset-1">

    <h2 class="show-header">Showing <%= "#{current_user.first_name}'s Workout Details" %></h2>

    <div class="col-xs-12 col-md-10 well member">
        <div class="col-xs-4">
            <strong>Duration (min):</strong>
        </div>
        <div class="col-xs-8 text-right">
            <%= current_user.excercises.find(params[:id]).duration_in_min %>
        </div>
    </div>
    <div class="col-xs-12 col-md-10 well member">
        <div class="col-xs-4">
            <strong>Workout details:</strong>
        </div>
        <div class="col-xs-8 text-right">
            <%= truncate(current_user.excercises.find(params[:id]).workout, length: 50) %>
        </div>
    </div>
    <div class="col-xs-12 col-md-10 well member">
        <div class="col-xs-4">
            <strong>Activity date:</strong>
        </div>
        <div class="col-xs-8 text-right">
            <%= current_user.excercises.find(params[:id]).workout_date %>
        </div>
    </div>
    <div class="col-xs-12 col-md-10 member">
        <%= link_to "Back", user_excercises_path(current_user) %>
    </div>

</div>